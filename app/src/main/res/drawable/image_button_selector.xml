<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:right="5sp" android:top="5sp">
                <shape>
                    <corners android:radius="3sp" />
                    <solid android:color="#FFFFFF" />
                </shape>
            </item>
            <item android:bottom="2sp" android:left="2sp">
                <shape>
                    <gradient android:angle="270"
                        android:endColor="#F6F6F6" android:startColor="#FFFFFF" />
                    <stroke android:width=".1sp" android:color="#BABABA" />
                    <corners android:radius="4sp" />
                    <padding android:bottom="10sp" android:left="10sp"
                        android:right="10sp" android:top="10sp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>